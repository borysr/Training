@model Test.Domain.Order

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.OrderNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderDate)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
<hr />

<table width="80%">
    <tr>
        <th>Item Name</th>
        <th>Quantity</th>
        <th>Price</th>
    </tr>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.ItemName</td>
                <td>@item.Quantity</td>
                <td>@item.ItemPrice</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "OrderDetails", new { id = item.Id }, null) |
                    @Html.ActionLink("Details", "Details", "OrderDetails", new { id = item.Id }, null) |
                    @Html.ActionLink("Delete", "Delete", "OrderDetails", new { id = item.Id }, null)
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    @Html.ActionLink("Add Item", "Create", "OrderDetails")
</p>
